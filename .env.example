# Database Configuration
DATABASE_URL=postgresql://tms_user:tms_password@localhost:5432/tms
REDIS_URL=redis://localhost:6379

# JWT Authentication (Local Auth Only)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4
EMBEDDINGS_MODEL=text-embedding-3-small
VECTOR_DIMENSION=1536

# Object Storage (MinIO/S3)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=tms-sources
MINIO_SECURE=false

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000"]
MAX_UPLOAD_SIZE=100MB
UPLOAD_DIR=./uploads
CHUNK_SIZE=1000
CHUNK_OVERLAP=100

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=They Might Say
NEXT_PUBLIC_APP_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Vector Search Configuration
VECTOR_SEARCH_LIMIT=10
SIMILARITY_THRESHOLD=0.7
EMBEDDING_BATCH_SIZE=100

# Citation Configuration
MIN_CITATION_CONFIDENCE=0.6
MAX_CITATIONS_PER_RESPONSE=5
CITATION_CONTEXT_WINDOW=200

# Production Settings
DOMAIN=localhost
SECURE_COOKIES=false
SENTRY_DSN=your_sentry_dsn_here

# Email Configuration (optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your_email@gmail.com
